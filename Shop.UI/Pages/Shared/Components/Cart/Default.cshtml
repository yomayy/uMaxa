@model IEnumerable<Shop.Application.Cart.GetCart.Response>

@{ 

}

<div>
	<p class="title">Cart</p>
	@foreach (var product in Model) {
		<article class="media">
			<figure class="media-left">
				<p class="image is-128x128">
					<img src="@product?.ProductImage" />
				</p>
			</figure>
			<div class="media-content">
				<div class="content">
					<p class="title">@product?.Name</p>
					<div class="level">
						<div class="level-item">Quantity: @product?.Quantity</div>
						<div class="level-item" style="margin: 10px">Size: @product?.StockDescription</div>
						<div class="level-item">Price: @product?.RealValue</div>
					</div>
				</div>
			</div>
		</article>
	}
</div>
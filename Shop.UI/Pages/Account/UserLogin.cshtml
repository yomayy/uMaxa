@page "{handler?}"
@model Shop.UI.Pages.Account.UserLoginModel
@{
}

<h2>Login</h2>

<a asp-page="UserRegister">Registration</a>

<form method="post" asp-page-handler="UserLogin" asp-anti-forgery="true">
	<div class="validation" asp-validation-summary="ModelOnly"></div>
	<div>
		<div class="form-group">
			<label asp-for="@Model.Input.Password">Password</label>
			<input asp-for="@Model.Input.Password" />
			<span asp-validation-for="@Model.Input.Password" />
		</div>
		<div class="form-group">
			<label asp-for="@Model.Input.Email">Email</label>
			<input asp-for="@Model.Input.Email" />
			<span asp-validation-for="@Model.Input.Email" />
		</div>
		<div class="form-group">
			<input type="submit" value="Login" class="btn" />
		</div>
	</div>
</form>